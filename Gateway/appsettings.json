{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "SigningKey": "slavaukrayini",
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "geoservice" : {
        "ClusterId": "geoservice",
        "Match": {
          "Path": "/api/station/closest"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "weatherservice" : {
        "ClusterId": "weatherservice",
//        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" },
//          { "PathPrefix": "/WeatherForecast" },
        ]
      }
    },
    "Clusters": {
      "geoservice": {
        "Destinations": {
          "geoservice-1": {
            "Address": "https://localhost:5228/"
          }
        }
      },
      "weatherservice": {
        "Destinations": {
          "weatherservice-1": {
            "Address": "https://localhost:5130/"
          }
        }
      }
    }
  }
}
